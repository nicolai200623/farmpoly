# Polymarket Trading Bot Environment Variables
# =============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# WALLET CONFIGURATION
# ============================================
# CRITICAL: Never commit these to git!
# Generate new wallets: python scripts/generate_wallets.py

# Set to 'true' for testing without real funds (generates random wallets)
# Set to 'false' for REAL TRADING (loads wallets below)
USE_DEMO_WALLETS=false

# Real wallet private keys (5-10 wallets recommended)
# Each wallet should have:
# - At least 100 USDC for trading
# - At least 0.5 MATIC for gas fees
# Bridge USDC to Polygon: https://wallet.polygon.technology/

WALLET_1_PK=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_2_PK=0x2234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_3_PK=0x3234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_4_PK=0x4234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_5_PK=0x5234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# Add more wallets as needed (up to WALLET_10_PK)

# Legacy format (deprecated - use WALLET_X_PK above)
WALLET_PRIVATE_KEYS=0x1234...,0x5678...,0x9abc...
MAIN_WALLET_PRIVATE_KEY=0xabcd...

# ============================================
# POLYMARKET API
# ============================================
# Polymarket API credentials (if required)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=

# ============================================
# BLOCKCHAIN RPC
# ============================================
# Polygon RPC URL (use your own Infura/Alchemy key for better reliability)
POLYGON_RPC_URL=https://polygon-rpc.com

# Infura Project ID (optional but recommended)
INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Key (alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_api_key

# ============================================
# ALERTS & NOTIFICATIONS
# ============================================
# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# Discord Webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ============================================
# TRADING PARAMETERS
# ============================================
# Total trading capital in USD
TOTAL_CAPITAL=10000

# Maximum capital per market (percentage, 0.05 = 5%)
MAX_CAPITAL_PER_MARKET=0.05

# Enable/disable features
ENABLE_HEDGING=true
ENABLE_ML_PREDICTION=true
ENABLE_AUTO_OPTIMIZATION=true

# ============================================
# DATABASE (Optional)
# ============================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=polymarket_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/polymarket_bot

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================
# SELENIUM/WEB SCRAPING
# ============================================
# ChromeDriver path (if not in PATH)
CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# Proxy settings (optional, for avoiding rate limits)
HTTP_PROXY=
HTTPS_PROXY=
SOCKS_PROXY=

# ============================================
# SECURITY
# ============================================
# Encryption key for sensitive data storage
ENCRYPTION_KEY=your_32_character_encryption_key

# API rate limiting
MAX_REQUESTS_PER_SECOND=10

# ============================================
# DEVELOPMENT/TESTING
# ============================================
# Test mode (no real orders placed)
TEST_MODE=false

# Paper trading mode
PAPER_TRADING=false
PAPER_TRADING_CAPITAL=10000

# Verbose logging
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ============================================
# ADVANCED SETTINGS
# ============================================
# Custom CLOB endpoint (if using private instance)
CUSTOM_CLOB_HOST=

# WebSocket URL override
CUSTOM_WEBSOCKET_URL=

# Gas price settings (in Gwei)
MAX_GAS_PRICE=500
GAS_PRICE_MULTIPLIER=1.1

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# DataDog API Key (optional)
DATADOG_API_KEY=

# Custom analytics endpoint
ANALYTICS_ENDPOINT=

# ============================================
# BACKUP & RECOVERY
# ============================================
# Backup directory
BACKUP_DIR=./backups

# Auto-backup interval (hours)
BACKUP_INTERVAL=24

# ============================================
# NOTES
# ============================================
# 1. Generate secure private keys using: python -c "from eth_account import Account; print(Account.create().key.hex())"
# 2. Never share your .env file or commit it to version control
# 3. Use strong, unique passwords for all services
# 4. Regularly rotate API keys and credentials
# 5. Monitor your wallets for unauthorized activity
# 6. Start with small capital and test mode enabled
# 7. Keep your dependencies updated for security patches

